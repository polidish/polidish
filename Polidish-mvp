  <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
  <script>
    // --- SUPABASE CONFIGURATION (Keys from 'Jeni' 3:31 PM) ---
    const supabaseUrl = 'https://dpswoooyjdtzcccgbqmy.supabase.co';
    const supabaseAnonKey = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImRwc3dvb295amR0emNjY2dicW15Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjMzOTEyMzUsImV4cCI6MjA3ODk2NzIzNX0.1EFf12IjZk8r2c516wHgA7juWJlMq9lzJIr9xFZG9vg'; 

    const supabase = Supabase.createClient(supabaseUrl, supabaseAnonKey);

    // --- SIGN UP FUNCTION (for [Join] button) ---
    async function send() {
      const e = document.getElementById('email').value.trim();
      if (!e) return;

      // Supabase sends a Magic Link (Sign-in with OTP) to the user's email
      const { error } = await supabase.auth.signInWithOtp({ 
        email: e, 
        options: { 
          emailRedirectTo: location.href 
        } 
      });

      document.getElementById('status').textContent = error 
        ? 'Retry: Check the console for error details.' 
        : 'Magic link sent — check your email to sign in and post.';
    }

    // --- LOAD JUNGLE THREAD (Initial load and 30-second refresh) ---
    async function load() {
      // NOTE: This assumes you have a 'posts' table with a 'body', 'author' (optional), and 'created_at' column.
      const { data } = await supabase.from('posts').select('*').order('created_at', { ascending: false });
      const threadBox = document.getElementById('thread-box');

      threadBox.innerHTML = data && data.length
        ? data.map(p => `
          <div class="post-item">
            <div class="post-body">${p.body.replace(/\n/g, '<br>')}</div>
            <small class="post-meta">— ${p.author || 'anon'} • ${new Date(p.created_at).toLocaleString()}</small>
          </div>
        `).join('') 
        : '<p style="text-align:center; color:#666; font-style:italic;">Be the first to post in the jungle…</p>';
    }

    load(); 
    setInterval(load, 30000); // Refresh posts every 30 seconds
  </script>
